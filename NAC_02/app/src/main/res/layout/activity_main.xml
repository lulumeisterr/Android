<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="fiap.com.br.nac_02.MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="180dp"
        android:layout_height="100dp"

        android:layout_above="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="22dp"
        app:srcCompat="@mipmap/logofiap" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="250dp"
        android:layout_height="40dp"

        android:layout_above="@+id/bt_ok"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="154dp"
        android:background="#11000000"
        android:drawableLeft="@mipmap/ic_launcher_nome"
        android:ems="10"
        android:hint="@string/app_plNome"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="250dp"
        android:layout_height="40dp"

        android:layout_alignStart="@+id/editText"
        android:layout_alignTop="@+id/editText"
        android:layout_marginTop="65dp"
        android:background="#11000000"
        android:drawableLeft="@mipmap/ic_launcher_email"
        android:ems="10"
        android:hint="@string/app_plEmail"
        android:inputType="textEmailAddress"
        android:textAlignment="center" />

    <Button
        android:id="@+id/bt_ok"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginBottom="70dp"
        android:background="@color/colorAccent"
        android:lineSpacingExtra="8sp"
        android:onClick="nextPagina"
        android:text="@string/app_botao"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:hint="Desenvolvido por @lulumeisterr"
        android:lineSpacingExtra="10sp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp" />

    <fragment
        android:id="@+id/fragment"
        android:name="fiap.com.br.nac_02.BlankFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
